#!/bin/zsh
query=$(cat ~/.config/BraveBrowser/Brave-Browser/Default/Bookmarks | grep "http[s]*://*" | sed -e 's/"url": "\(.*\)"/\1/' | awk '{$1=$1};1'| rofi -dmenu -theme "Adapta-Nokto" -i -p "Search" -font "Hack 18")

if [ "$query" != "" ]
then
	if [ "$(echo $query | grep 'http[s]*://*.*')" != "" ]
	then
		xdg-open "$query"
	else
		q=$(sed s/" "/"+"/g <<< "$query")
		xdg-open "https://google.com/search?q=${q}"
	fi
fi
