#!/bin/zsh
query=$(cat ~/.config/BraveSoftware/Brave-Browser/Default/Bookmarks | grep "https://*" | sed -e 's/"url": "\(.*\)"/\1/' | awk '{$1=$1};1'| rofi -dmenu -theme "Adapta-Nokto" -i -p "Search" -font "Hack 18" -matching fuzzy -sort fzf)

if [ "$query" != "" ]
then
	if [ "$(echo $query | grep 'https://*.*')" != "" ]
	then
		xdg-open "$query"
	else
		q=$(sed s/" "/"+"/g <<< "$query")
		xdg-open "https://google.com/search?q=${q}"
	fi
fi
