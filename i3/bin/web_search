#!/bin/zsh
query=$(cat ~/.config/BraveSoftware/Brave-Browser/Default/Bookmarks | grep "https://*" | sed -e 's/"url": "\(.*\)"/\1/' | awk '{$1=$1};1'| dmenu -l 10 -i -fn "Noto-13" -nb "#2B2C2B" -nf "#F9FAF9" -sb "#16A085" -sf "#F9FAF9" -p "Search")

if [ "$query" != "" ]
then
	if [ "$(echo $query | grep 'https://*.*')" != "" ]
	then
		xdg-open "$query"
	else
		xdg-open "https://google.com/search?q=${query}"
	fi
fi
