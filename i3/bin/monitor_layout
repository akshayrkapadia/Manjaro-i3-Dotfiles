#!/bin/zsh

monitor_layouts=("default\nleft\nright")
layout=$(echo -e "$monitor_layouts" | dmenu -fn "Noto-10.5" -nb "#2B2C2B" -nf "#F9FAF9" -sb "#16A085" -sf "#F9FAF9" -p "Monitor Layout")

if [ "$layout" = "left" ]
then
	~/.screenlayout/left_monitor.sh
elif [ "$layout" = "right" ]
then
	~/.screenlayout/right_monitor.sh
elif [ "$layout" = "default" ]
then
	~/.screenlayout/default.sh
fi
