#!/bin/zsh

monitor_layouts=("primary\nsecondary\nextend_left\nextend_right")
layout=$(echo -e "$monitor_layouts" | rofi -dmenu -theme "solarized_alternate")

if [ "$layout" = "extend_left" ]
then
	~/.screenlayout/extend_left.sh
elif [ "$layout" = "extend_right" ]
then
	~/.screenlayout/extend_right.sh
elif [ "$layout" = "secondary" ]
then
	~/.screenlayout/secondary.sh
elif [ "$layout" = "primary" ]
then
	~/.screenlayout/primary.sh
fi
